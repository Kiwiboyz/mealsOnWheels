<style>
    #map {
        height: 600px;
        border: 2px solid black;
    }
</style>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAd3lL6VULqPXaorKesbnBc_s7-jpS9hsQ&callback=initMap" async defer></script>
<script>
    function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            center: {lat: -45.8788, lng: 170.5028},
            zoom: 8
        });
    }
</script>

<div class="row" ng-app="AddCustomer" ng-init='mrcats = <%- JSON.stringify(mrcats); %>; customer = <%- JSON.stringify(customer); %>; user = <%- JSON.stringify(user);%>' ng-controller="CustomerCtrl">
    <div class="col-md-6 mt-4">
        <div>
            <div class="card">
                <h3 class="card-header bg-success text-white">Customer details</h3>
                <div class="card-block">
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="customerStatus">Customer status</label>
                                    <select class="form-control" id="customerStatus"  ng-model="saveCustomer['customerStatus']">
                                        <option value="active">Active</option>
                                        <option value="notActive">Not active</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="customerNumber">Customer number</label>
                                    <input type="text" id="customerNumber" class="form-control" value="<%- customer["customerNumber"] %>" ng-model="saveCustomer['customerNumber']"/>
                                </div>
                            </div>
                        </div>

                        <% field = [{fieldId:"firstName",fieldName: "First name"},{fieldId:"lastName",fieldName: "Last name"}];%>
                        <% include partials/customerInputAddUser.ejs %>

                        <% field = [{fieldId:"email",fieldName: "Email address"}, {fieldId:"phone",fieldName: "Phone number"}]; %>
                        <% include partials/customerInputAddUser.ejs %>
						
                        <% field = {fieldId:"address",fieldName: "Address"}; %>
                        <% include partials/customerTextarea.ejs %>

                        <div class="row mb-4">
                            <div class="col-md-2 pr-0">
                                <button id="findAddress" type="button" class="btn btn-success w-100" ng-click="findAddress()">Find</button>
                            </div>
                            <div class="col-md-10">
                                <div id="map"></div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                Lat: <input type="text" readonly id="lat" value="{{ saveCustomer['latitude'] }}" />
                            </div>
                            <div class="col-md-6">
                                Lng: <input type="text" readonly id="lng" value="{{ saveCustomer['longitude'] }}" />
                            </div>
                        </div>

                        <% field = {fieldId:"adminNotes",fieldName: "Admin notes"} ;%>
                        <% include partials/customerTextarea.ejs %>

                        <% rows = [ {name:"Standard meal", key:"standardMeal"},
                                    {name:"Named meal", key:"namedMeal"},
                                    {name:"Dessert", key:"dessert"},
                                    {name:"Soup", key:"soup"},
                                    {name:"Sandwiches", key:"sandwiches"},
                                    {name:"Fruit", key:"fruit"},
                                    {name:"Baking", key:"baking"},
                                    {name:"Savouries", key:"savouries"},
                                    {name:"Frozen meal", key:"frozenMeal"},
                                    {name:"Frozen desserts", key:"frozenDesserts"},
                                    {name:"Other", key:"other"}
                                    ] ;%>

                        <table class="mt-4 customerDay">
                            <tr>
                                <th></th>
                                <th>Mon</th>
                                <th>Tue</th>
                                <th>Wed</th>
                                <th>Thu</th>
                                <th>Fri</th>
                                <th>Sat</th>
                                <th>Sun</th>
                            </tr>
                            <% for (var i=0;i<rows.length;i++){%>
                                <% row = rows[i]; %>
                                <% include partials/customerDayTr.ejs %>
                            <% } %>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 mt-4">
        <div class="row">
            <div class="col-md-12">
                <h3>Meal requirements</h3>
            </div>
            <div class="col-md-12" ng-repeat="cat in mrcats">
                <div class="card">
                    <h3 class="card-header bg-inverse text-white" data-toggle="collapse" data-target="#block_{{ cat.id }}">{{ cat.category }} <span class="close text-white" ng-click="minimise(cat)">-</span></h3>
                    <div id="block_{{ cat.id }}" class="collapse">
                        <div class="card-block">
                            <div class="row">
                                <div class="col-md-6" ng-repeat="mealr in cat.mealRequirements">
                                    <div class="form-group">
                                        <input type="checkbox" id="checkbox_{{ mealr.id }}" ng-model="mealRequirements[mealr.id]" value="{{mealr.id}}"
                                                ng-checked="findRequirement(customer,mealr);"
                                        />
                                        <label for="checkbox_{{ mealr.id }}">{{ mealr.requirement }}</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="position:fixed;top:0;right:0;padding:10px;">
        <input type="button" value="Save" class="btn btn-primary" ng-click="addCustomer()"/>
    </div>
</div>


<script type="text/javascript">

    angular.module('AddCustomer', []).controller('CustomerCtrl', ['$scope', '$http', function ($scope, $http) {
        $scope.mealRequirements = {};
        $scope.customerRequirements = [];
        $scope.customerDay = {};
		$scope.saveUser = {"firstName":"<%= user.firstName %>", "lastName":"<%= user.lastName %>", "email":"<%= user.email %>","phone":"<%= user.phone %>", "password":"<%= user.password %>",  "username":"<%= user.username %>"};
		$scope.saveCustomer = {"customerNumber":"<%= customer.customerNumber %>", "customerStatus":"<%= customer.customerStatus %>", "adminNotes":"<%= customer.adminNotes %>", "address":"<%= customer.address %>", "latitude":"", "longitude":"" };

        $scope.findRequirement = function(customer, mealr){
            var found = false;
            if(customer.mealRequirements)
                for(var i=0;i<customer.mealRequirements.length;i++) {
                    if (customer.mealRequirements[i].id == mealr.id) {
                        found = true;
                        break;
                    }
                }
            return found;
        };


        $scope.findAddress = function() {
            var addy = $("#address").val();
            var JSONSTRING = 'https://www.mapquestapi.com/geocoding/v1/batch?&inFormat=json&outFormat=json&location=' + addy + '&key=odkd9bxRkGJEPHxlVBwJaDKO74PrYzHA';
            $.get(JSONSTRING, function (data) {
                console.log("data", data);
                for (var i = 0; i < data.results.length; i++) {
                    var pos = data.results[i].locations[0].latLng;
                    $scope.saveCustomer['latitude'] = pos.lat;
                    $scope.saveCustomer['longitude'] = pos.lng;
                    console.log(pos);
                    var marker = new google.maps.Marker({
                        position: pos,
                        map: map
                    });
                }
            });
        };

        $scope.addCustomer = function () {
            console.log($scope.customerDay);
            $scope.customerRequirements = [];
            angular.forEach($scope.mealRequirements, function(key,value){
                 if(key)
                    $scope.customerRequirements.push(value);
            });

            console.log($scope.saveCustomer);

            $http.post('/addCustomers', {
                "customer": $scope.saveCustomer,
                "mealRequirements":$scope.customerRequirements,
                "customerDay" : $scope.customerDay,
				"user":$scope.saveUser
			}).success(function(){
				alert("customer saved");
			});
			
        }
    }]);

</script>