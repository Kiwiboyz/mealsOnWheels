
<script>
	
	var days = {
		Sunday:0,
		Monday:1,
		Tuesday:2,
		Wednesday:3,
		Thursday:4,
		Friday:5,
		Saturday:6
	};
	
	var colors = {
		standardMeal: '',
		namedMeal: 'lightblue',
		dessert: '#ff9999',
		soup: 'lightgreen',
		sandwiches: 'yellow',
		fruit: 'orange',
		baking: '#D8BFD8',
		savouries: 'pink', 
		frozenMeal: '#bc8f8f',
		frozenDesserts: '#f5deb3',
		other: '#bdb76b'
	};
	
	var calendarEvents = [];

	$(document).ready(function() 
	{ 
		// page is now ready, initialize the calendar...
		$('#calendar').fullCalendar({
			// put your options and callbacks here
			events: calendarEvents
					
					
		})
	});
</script>


<div class="row">

	<div class="col-md-10 pr-4 pl-4" ng-app='mow' style="padding:0">
		<h3 class="pt-4" style="margin-bottom:-10px">Welcome to</h3>
		<h1 class="display-4">Meals on Wheels</h1>
		<p>
			Today is <span><%= today %></span>
		</p>
		<p>
			Today's meals:<br/>
			<% customerDays.forEach(function(e){%>
				<%= e.dataValues['key'] %> <%= e.dataValues["count"] %><br/>
			<% }); %>
		</p>
		
			<% allCustomerDays.forEach(function(e){%>
				<script type="text/javascript">

				var calendarEvent = {};
				calendarEvent.title = "<%=e.dataValues['key']%>" + " " + "<%=e.dataValues['count']%>";
				calendarEvent.dow = [days["<%=e.dataValues['day']%>"]];
				calendarEvent.color =  colors["<%=e.dataValues['key']%>"];
				
				calendarEvents.push(calendarEvent);

				</script>
			<% }); %>
		
		
		
		<div id='calendar'></div>
		
	</div>
	
	<%- include common/sidebar.ejs %>
	
	
</div>
